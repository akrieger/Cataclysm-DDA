[
  {
    "type": "effect_on_condition",
    "id": "EOC_NH_start",
    "eoc_type": "EVENT",
    "required_event": "game_start",
    "effect": [ { "run_eocs": "EOC_NH_difficultycheck" } ]
  },
  {
